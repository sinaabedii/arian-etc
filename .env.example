# Next.js Backend Environment Variables

# JWT Secret for authentication (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration (when you add a database)
# DATABASE_URL=postgresql://username:password@localhost:5432/cleantech_db
# DATABASE_URL=mongodb://localhost:27017/cleantech_db

# Email Service Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# SendGrid (alternative email service)
# SENDGRID_API_KEY=your-sendgrid-api-key

# File Upload Configuration
# UPLOAD_MAX_SIZE=5242880  # 5MB in bytes
# UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# API Rate Limiting
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000

# External API Keys (if needed)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...

# Application Settings
# APP_URL=http://localhost:3000
# ADMIN_EMAIL=admin@cleantech.com

# Security Settings
# BCRYPT_SALT_ROUNDS=12
# SESSION_TIMEOUT=86400  # 24 hours in seconds

# Development Settings
# NODE_ENV=development
# DEBUG=true
